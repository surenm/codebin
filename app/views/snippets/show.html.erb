<div class="codebin-area row">
  <div id="snippet-wrapper" class="col-md-7">
    <%= render 'form' %>
  </div>
  <div id="output-wrapper" class="col-md-5">
    <h4> Output: </h4>
    <div class="output-area">
      <%- if @snippet.container %>
      <pre><%= "#{@snippet.output}" %></pre>
      <% end %>
    </div>
    <h4> Error: </h4>
    <div class="error-area">
      <%- if @snippet.container %>
      <pre><%= "#{@snippet.error}" %></pre>
      <% end %>
    </div>
  </div>
</div>